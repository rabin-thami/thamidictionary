generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum verificationEnum {
  PENDING
  VERIFIED
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String              @unique
  password           String?
  verificationStatus verificationEnum    @default(PENDING)
  emailVerified      DateTime?
  image              String?
  accounts           Account[]
  VerificationToken  VerificationToken[]
  Word               Word[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

enum identifier {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model VerificationToken {
  id         String     @id @default(cuid())
  identifier identifier
  token      String     @unique
  expires    DateTime
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum PartOfSpeechEnum {
  noun
  verb
  adjective
  adverb
  pronoun
  conjunction
  preposition
  interjection
  article
}

enum WordCategoryEnum {
  noun
  verb
  adjective
  adverb
  pronoun
  conjunction
}

model Word {
  id               String   @id @default(cuid())

  // Words in three languages
  wordEnglish      String
  wordNepali       String
  wordThami        String

  // Part of speech and category
  partOfSpeech     PartOfSpeechEnum
  category         WordCategoryEnum

  // Definitions in three languages
  definitionEnglish String
  definitionNepali  String
  definitionThami   String

  // Examples in three languages
  examplesEnglish   String[] @default([])
  examplesNepali    String[] @default([])
  examplesThami     String[] @default([])

  // Synonyms in three languages
  synonymsEnglish   String[] @default([])
  synonymsNepali    String[] @default([])
  synonymsThami     String[] @default([])

  // Ownership / tracking
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Optional: prevent same user adding duplicate Thami word
  @@unique([userId, wordThami])
}
